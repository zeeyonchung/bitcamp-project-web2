<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="false">

<!-- 필터 등록 -->
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>bitcamp.java89.ems2.filter.CharacterEncodingFilter</filter-class>
  </filter>


<!-- 필터를 적용할 URL 지정 -->
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


<!-- 서블릿 클래스 등록 -->
  <servlet>
    <servlet-name>Context Loader Servlet</servlet-name>
    <servlet-class>bitcamp.java89.ems2.servlet.ContextLoaderServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
</web-app>

